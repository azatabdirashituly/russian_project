                        <td><input type="radio" name="q10" value="Согласен"></td>
                        <td><input type="radio" name="q10" value="Нейтрален"></td>
                        <td><input type="radio" name="q10" value="Не согласен"></td>
                        <td><input type="radio" name="q10" value="Категорически не согласен"></td>
                    </tr>
