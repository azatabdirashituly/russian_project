                        <td><input type="radio" name="q9" value="Полностью согласен"></td>
                        <td><input type="radio" name="q9" value="Согласен"></td>
                        <td><input type="radio" name="q9" value="Нейтрален"></td>
                        <td><input type="radio" name="q9" value="Не согласен"></td>
                        <td><input type="radio" name="q9" value="Категорически не согласен"></td>
                    </tr>
