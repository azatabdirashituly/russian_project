                        <td><input type="radio" name="q7" value="Полностью согласен"></td>
                        <td><input type="radio" name="q7" value="Согласен"></td>
                        <td><input type="radio" name="q7" value="Нейтрален"></td>
                        <td><input type="radio" name="q7" value="Не согласен"></td>
                        <td><input type="radio" name="q7" value="Категорически не согласен"></td>
