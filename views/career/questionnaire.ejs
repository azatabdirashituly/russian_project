                        <td><input type="radio" name="q8" value="Согласен"></td>
                        <td><input type="radio" name="q8" value="Нейтрален"></td>
                        <td><input type="radio" name="q8" value="Не согласен"></td>
                        <td><input type="radio" name="q8" value="Категорически не согласен"></td>
